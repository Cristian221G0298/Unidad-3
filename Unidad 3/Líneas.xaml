<Window x:Class="Unidad_3.Líneas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Unidad_3"
        mc:Ignorable="d"
        Title="Líneas" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Archivo">
                <MenuItem Header="Guardar" Name="mnGuardar" Click="mnGuardar_Click"/>
                <MenuItem Header="Imprimir" Name="mnImprimir" Click="mnImprimir_Click"/>
                <MenuItem Header="Salir" Name="mnSalir" Click="mnSalir_Click"/>
            </MenuItem>
        </Menu>
        <Canvas Name="Lienzo" Background="White" MouseDown="Lienzo_MouseDown" MouseMove="Lienzo_MouseMove" MouseUp="Lienzo_MouseUp"/>
    </DockPanel>
</Window>
